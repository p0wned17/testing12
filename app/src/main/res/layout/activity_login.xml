<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".login">


    <EditText
        android:id="@+id/etMail"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="E-mail"
        android:textColor="#959494"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColorHint="#959494"
        app:layout_constraintBottom_toTopOf="@+id/etPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="Пароль"
        android:textColor="#959494"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#959494"
        app:layout_constraintBottom_toTopOf="@+id/loginbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="316dp"
        android:layout_height="225dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/etMail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206">

        <ImageView
            android:id="@+id/logo_pic"
            android:layout_width="226dp"
            android:layout_height="224dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WorldCinema"
            android:textColor="#ef3a01"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.993" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/buttonstyle"
        android:backgroundTint="#ef3a01"
        android:text="Войти"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/regbut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/regbut"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/buttonreg"
        android:text="Регистрация"
        android:textAllCaps="false"
        android:textColor="#ef3a01"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>